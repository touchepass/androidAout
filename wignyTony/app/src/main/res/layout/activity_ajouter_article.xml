<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.tony.troisiememain.activity.AjouterArticleActivity">

    <TextView
        android:id="@+id/erreur_ajouter_article"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_nouvel_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/erreur_ajouter_article">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nom_nouvel_artcile"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Nom" />

            <EditText
                android:id="@+id/nom_nouvel_article"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Description" />

            <EditText
                android:id="@+id/description_nouvel_article"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/txt_prix"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Prix" />

            <EditText
                android:id="@+id/prix_nouvel_article"
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/txt_etat"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Etat" />

            <RadioGroup
                android:id="@+id/etat_nouvel_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/etat_neuf_nouvel_article"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Neuf" />

                <RadioButton
                    android:id="@+id/etat_utilise_nouvel_article"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Utilisé" />
                />
            </RadioGroup>


            <TextView
                android:id="@+id/txt_ville"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Ville" />

            <EditText
                android:id="@+id/ville_nouvel_article"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/txt_recuperation"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Récupération" />

            <RadioGroup
                android:id="@+id/recuperation_nouvel_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp">

                <RadioButton
                    android:id="@+id/poste_nouvel_article"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Poste" />

                <RadioButton
                    android:id="@+id/deplacement_nouvel_article"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Déplacement" />

            </RadioGroup>

            <Button
                android:id="@+id/valider_nouvel_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Valider" />

            <Button
                android:id="@+id/retour_nouveau_accueil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="Retour" />

            <TextView
                android:id="@+id/ajustement"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""/>
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


</android.support.constraint.ConstraintLayout>
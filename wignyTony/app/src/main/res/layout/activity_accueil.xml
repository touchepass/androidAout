<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.tony.troisiememain.activity.AccueilActivity">

    <TextView
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/information_accueil"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15dp"
        android:text=" "
        android:layout_marginTop="10dp"

        />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/information_accueil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/ajouter_article"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Ajouter un article">
    </Button>


    <Button
        app:layout_constraintTop_toBottomOf="@+id/ajouter_article"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/recherche_par_prix"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Rechercher par prix">
    </Button>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/recherche_par_prix"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/rechercher_par_ville"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Rechercher par ville">
    </Button>

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:id="@+id/quitter"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="quitter">
    </Button>


</android.support.constraint.ConstraintLayout>
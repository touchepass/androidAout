<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.tony.troisiememain.activity.InfoArticleActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_nom_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Nom" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_nom_info"
        android:id="@+id/nom_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/txt_nom_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_description_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Description" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/txt_nom_info"
        app:layout_constraintLeft_toRightOf="@+id/txt_description_info"
        android:id="@+id/description_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/description_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_prix_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Prix" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/description_info"
        app:layout_constraintLeft_toRightOf="@+id/txt_prix_info"
        android:id="@+id/prix_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/prix_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_etat_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Etat" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/prix_info"
        app:layout_constraintLeft_toRightOf="@+id/txt_etat_info"
        android:id="@+id/etat_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/etat_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_ville_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Ville" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/etat_info"
        app:layout_constraintLeft_toRightOf="@+id/txt_ville_info"
        android:id="@+id/ville_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/ville_info"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/txt_reception_info"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Ville" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/ville_info"
        app:layout_constraintLeft_toRightOf="@+id/txt_reception_info"
        android:id="@+id/reception_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <Button
        app:layout_constraintTop_toBottomOf="@+id/reception_info"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/retour_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />


</android.support.constraint.ConstraintLayout>